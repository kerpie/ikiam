.container-fluid
  .row
    .col-sm-12
      .page-header
        %h1
          ¡Regístrate para empezar!
          %small
            Estas a un paso de subir tus capturas
  .row
    .col-sm-6.col-sm-offset-3
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal", role: "form"}) do |f|
        =custom_devise_error_messages!
        .form-group
          = f.label :name, "Nombre(s):", class: "col-sm-2 control-label"
          .col-sm-10
            = f.text_field :name, autofocus: true, class: "form-control"
        .form-group
          = f.label :last_name, "Apellidos:", class: "col-sm-2 control-label"
          .col-sm-10
            = f.text_field :last_name, class: "form-control"
        .form-group
          = f.label :email, "Correo:", class: "col-sm-2 control-label"
          .col-sm-10
            = f.email_field :email, class: "form-control"
        .form-group
          = f.label :password, "Contraseña: (#{@minimum_password_length} caracteres minimo)", class: "col-sm-2 control-label"
          .col-sm-10
            = f.password_field :password, autocomplete: "off", class: "form-control"
        .form-group
          = f.label :password_confirmation, "Confirmación de la contraseña", class: "col-sm-2 control-label"
          .col-sm-10
            = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
        .form-group
          .col-sm-offset-2.col-sm-10
            = f.submit "Registrarse", class: "btn btn-default btn-block"