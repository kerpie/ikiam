%nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "RETO IKIAM", root_path, class: "navbar-brand"
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      =form_tag search_result_path, class: "navbar-form navbar-left", role: "search", remote: true do
        .form-group
          = hidden_field_tag :search_type, 0
          = text_field_tag :text_to_search, "", class: "form-control", placeholder: "Ingrese nombre de animal o planta"
        = submit_tag "Buscar", class: "button btn btn-default"
      %ul.nav.navbar-nav.navbar-left
        %li
          = link_to "Busqueda Avanzada", advanced_search_path
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to "Sorprendeme!", random_result_path, remote: true
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = "Hola #{current_user.name}"
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to "Registrar captura", new_capture_path
              %li
                = link_to "Editar perfil", edit_user_registration_path
              %li
                = link_to "Cerrar sesión", destroy_user_session_path, method: :delete
        - else
          %li
            = link_to "Iniciar sesión", new_user_session_path
          %li
            = link_to "Crear cuenta", new_user_registration_path