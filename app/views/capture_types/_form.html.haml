= form_for @capture_type do |f|
  - if @capture_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@capture_type.errors.count, "error")} prohibited this capture_type from being saved:"
      %ul
        - @capture_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
